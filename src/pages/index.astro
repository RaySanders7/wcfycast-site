---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allEpisodes = await getCollection('episodes', ({ data }) => {
  return data.draft !== true;
});

// Sort episodes by date (newest first) and take the first 3 as featured
allEpisodes.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const featuredEpisodes = allEpisodes.slice(0, 3);

const formatDate = (dateString: string) => {
  const options: Intl.DateTimeFormatOptions = { year: 'numeric', month: 'long', day: 'numeric' };
  return new Date(dateString).toLocaleDateString('en-US', options);
};
---

<Layout title="Home">
  <!-- Quick Actions -->
  <section class="py-8 bg-white border-b border-gray-200">
    <div class="container mx-auto px-4 text-center">
      <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4">
        <a href="/episodes" class="bg-red-700 hover:bg-red-800 text-white font-bold py-3 px-6 sm:px-8 rounded-full transition-colors text-center inline-flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
          </svg>
          Listen to Episodes
        </a>
        <a href="#featured" class="bg-transparent hover:bg-gray-50 text-red-700 font-bold py-3 px-6 sm:px-8 border-2 border-red-700 rounded-full transition-colors text-center inline-flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
          Browse All Episodes
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Episodes -->
  <section id="featured" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold font-serif mb-4">Latest Episodes</h2>
        <div class="w-20 h-1 bg-red-700 mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {featuredEpisodes.map(episode => (
          <article class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105 mx-auto w-full max-w-sm sm:max-w-none">
            <div class="relative pb-[56.25%] bg-gray-200">
              <img 
                src={episode.data.image} 
                alt={episode.data.title}
                class="absolute inset-0 w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 p-3 sm:p-4 w-full">
                <span class="inline-block bg-red-700 text-white text-xs px-2 py-1 rounded">
                  {episode.data.duration}
                </span>
              </div>
            </div>
            <div class="p-4 sm:p-6">
              <div class="text-sm text-gray-500 mb-2">{formatDate(episode.data.date.toDateString())}</div>
              <h3 class="text-lg sm:text-xl font-bold mb-2 font-serif leading-tight">
                <a href={`/episodes/${episode.slug}`} class="hover:text-red-700 transition-colors">
                  {episode.data.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4 text-sm sm:text-base line-clamp-3">{episode.data.description}</p>
              <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                <a 
                  href={`https://www.youtube.com/watch?v=${episode.data.youtubeId}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-red-700 hover:text-red-800 flex items-center justify-center sm:justify-start py-2 sm:py-0"
                  title="Watch on YouTube"
                >
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                  </svg>
                  Watch
                </a>
                <a 
                  href={episode.data.audiomackUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-red-700 hover:text-red-800 flex items-center justify-center sm:justify-start py-2 sm:py-0"
                  title="Listen on Audiomack"
                >
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22.5c-5.8 0-10.5-4.7-10.5-10.5S6.2 1.5 12 1.5 22.5 6.2 22.5 12 17.8 22.5 12 22.5z"/>
                    <path d="M12 5.5l-8 12h16l-8-12z"/>
                  </svg>
                  Listen
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="text-center mt-12">
        <a 
          href="/episodes" 
          class="inline-block bg-red-700 hover:bg-red-800 text-white font-bold py-3 px-8 rounded-full transition-colors"
        >
          View All Episodes
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold font-serif mb-4">About The Show</h2>
          <div class="w-20 h-1 bg-red-700 mx-auto"></div>
        </div>
        
        <div class="prose mx-auto">
          <p>Welcome to <strong>We Comin' For You Cast</strong>, the ultimate pro-wrestling podcast where we break down the latest matches, storylines, and backstage news from WWE, AEW, NJPW, and beyond.</p>
          
          <p>Each week, our passionate hosts bring you in-depth analysis, hot takes, and exclusive interviews with some of the biggest names in the wrestling business. Whether you're a lifelong fan or new to the squared circle, we've got something for everyone.</p>
          
          <p>New episodes drop every Monday. Subscribe on your favorite podcast platform and never miss an episode!</p>
          
          <div class="mt-8 text-center">
            <a 
              href="/about" 
              class="inline-block bg-transparent hover:bg-red-700 text-red-700 hover:text-white font-bold py-3 px-8 border-2 border-red-700 rounded-full transition-colors"
            >
              Learn More About Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
