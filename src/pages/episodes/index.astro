---
import Layout from '../../layouts/Layout.astro';

// Sample data - will be replaced with data from Decap CMS
const allEpisodes = [
  {
    id: 1,
    title: 'WrestleMania Recap & Analysis',
    description: 'We break down all the biggest moments, surprises, and upsets from this year\'s WrestleMania!',
    date: '2023-04-10',
    duration: '1:25:36',
    youtubeId: '5pL_TXiMQSQ',
    audiomackUrl: '#',
    image: '/placeholder-episode-1.jpg',
    tags: ['wwe', 'wrestlemania', 'ppv']
  },
  {
    id: 2,
    title: 'AEW Revolution Review',
    description: 'Our thoughts on the latest AEW PPV, including the shocking main event finish and what it means for the future of the company.',
    date: '2023-03-15',
    duration: '1:12:45',
    youtubeId: 'dQw4w9WgXcQ',
    audiomackUrl: '#',
    image: '/placeholder-episode-2.jpg',
    tags: ['aew', 'ppv', 'revolution']
  },
  {
    id: 3,
    title: 'NXT 2.0: Love It or Hate It?',
    description: 'We debate the NXT rebrand and whether the changes are helping or hurting the brand.',
    date: '2023-03-01',
    duration: '58:22',
    youtubeId: 'dQw4w9WgXcQ',
    audiomackUrl: '#',
    image: '/placeholder-episode-3.jpg',
    tags: ['wwe', 'nxt', 'discussion']
  },
  {
    id: 4,
    title: 'Royal Rumble Fallout',
    description: 'Breaking down all the surprises and what the Royal Rumble results mean for WrestleMania season.',
    date: '2023-01-30',
    duration: '1:05:12',
    youtubeId: 'dQw4w9WgXcQ',
    audiomackUrl: '#',
    image: '/placeholder-episode-4.jpg',
    tags: ['wwe', 'royal-rumble', 'ppv']
  },
  {
    id: 5,
    title: 'AEW Winter is Coming Review',
    description: 'Our take on the latest AEW special, including the shocking title change and what it means for the future of the company.',
    date: '2022-12-15',
    duration: '52:18',
    youtubeId: 'dQw4w9WgXcQ',
    audiomackUrl: '#',
    image: '/placeholder-episode-5.jpg',
    tags: ['aew', 'winter-is-coming', 'ppv']
  },
  {
    id: 6,
    title: 'NXT WarGames Preview',
    description: 'Our predictions and analysis for the upcoming NXT WarGames event, including potential surprises and match breakdowns.',
    date: '2022-11-28',
