---
import { Image } from 'astro:assets';
import wcfy_logo from '../assets/wcfy_logo.jpg';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'We Comin\' For You Cast - Your favorite pro-wrestling podcast' } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | We Comin' For You Cast</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-gradient-to-r from-red-800 via-red-700 to-red-600 text-white shadow-xl">
      <!-- Navigation Bar -->
      <nav class="border-b border-red-600/30">
        <div class="container mx-auto px-4 py-3">
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-3">
              <Image src={wcfy_logo} alt="WCFY Cast Logo" class="w-10 h-10 rounded-full object-cover" />
              <span class="font-medium text-sm sm:text-base">We Comin' For You Cast</span>
            </div>
            <ul class="flex space-x-4 sm:space-x-6">
              <li><a href="/" class="text-sm sm:text-base hover:text-yellow-300 transition-colors py-2 px-3 rounded hover:bg-red-600/50">Home</a></li>
              <li><a href="/episodes" class="text-sm sm:text-base hover:text-yellow-300 transition-colors py-2 px-3 rounded hover:bg-red-600/50">Episodes</a></li>
              <li><a href="/about" class="text-sm sm:text-base hover:text-yellow-300 transition-colors py-2 px-3 rounded hover:bg-red-600/50">About</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <div class="relative py-12 sm:py-16 md:py-20 overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent"></div>
        </div>
        
        <div class="container mx-auto px-4 relative z-10 text-center">
          <div class="max-w-4xl mx-auto">
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold font-serif mb-4 sm:mb-6 leading-tight">
              <span class="block text-yellow-400">We Comin'</span>
              <span class="block">For You Cast</span>
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl mb-6 sm:mb-8 text-red-100 max-w-3xl mx-auto leading-relaxed">
              Pro Wrestling from a Black Dude's Perspective
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <div class="flex items-center space-x-2 text-yellow-300">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM15.657 6.343a1 1 0 011.414 0A9.972 9.972 0 0119 12a9.972 9.972 0 01-1.929 5.657 1 1 0 11-1.414-1.414A7.971 7.971 0 0017 12a7.971 7.971 0 00-1.343-4.243 1 1 0 010-1.414z" clip-rule="evenodd" />
                  <path fill-rule="evenodd" d="M13.828 8.172a1 1 0 011.414 0A5.983 5.983 0 0117 12a5.983 5.983 0 01-1.758 3.828 1 1 0 11-1.414-1.414A3.987 3.987 0 0015 12a3.987 3.987 0 00-1.172-2.828 1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm sm:text-base font-medium">New episodes every Monday</span>
              </div>
              <div class="flex space-x-3">
                <a href="#" class="text-white hover:text-yellow-300 transition-colors" title="YouTube">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                  </svg>
                </a>
                <a href="#" class="text-white hover:text-yellow-300 transition-colors" title="Audiomack">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22.5c-5.8 0-10.5-4.7-10.5-10.5S6.2 1.5 12 1.5 22.5 6.2 22.5 12 17.8 22.5 12 22.5z"/>
                    <path d="M12 5.5l-8 12h16l-8-12z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <h2 class="text-2xl font-bold font-serif">We Comin' For You Cast</h2>
            <p class="text-gray-300">Your favorite pro-wrestling podcast</p>
          </div>
          <div class="flex space-x-4">
            <a href="#" class="text-white hover:text-yellow-300 transition-colors">
              <span class="sr-only">YouTube</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-white hover:text-yellow-300 transition-colors">
              <span class="sr-only">Audiomack</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22.5c-5.8 0-10.5-4.7-10.5-10.5S6.2 1.5 12 1.5 22.5 6.2 22.5 12 17.8 22.5 12 22.5z" />
                <path d="M12 5.5l-8 12h16l-8-12z" />
              </svg>
            </a>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400 text-sm">
          <p>Â© {new Date().getFullYear()} We Comin' For You Cast. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap');
  
  :root {
    --font-sans: 'Montserrat', sans-serif;
    --font-serif: 'Playfair Display', serif;
  }
  
  body {
    font-family: var(--font-sans);
    line-height: 1.6;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-serif);
  }
  
  .prose {
    max-width: 65ch;
  }
  
  .prose :where(h1, h2, h3, h4, h5, h6):not(:first-child) {
    margin-top: 1.5em;
  }
  
  .prose :where(h1, h2, h3, h4, h5, h6) {
    line-height: 1.2;
    font-weight: 700;
  }
  
  .prose p {
    margin-top: 1em;
    margin-bottom: 1em;
  }
  
  .prose a {
    color: #b91c1c;
    text-decoration: none;
    font-weight: 500;
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
  
  /* Additional responsive utilities */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Ensure images are responsive */
  img {
    max-width: 100%;
    height: auto;
  }
  
  /* Better touch targets for mobile */
  @media (max-width: 640px) {
    a, button {
      min-height: 44px;
      min-width: 44px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }
  
  /* Improved text scaling */
  @media (max-width: 480px) {
    html {
      font-size: 14px;
    }
  }
  
  @media (min-width: 481px) and (max-width: 768px) {
    html {
      font-size: 15px;
    }
  }
  
  @media (min-width: 769px) {
    html {
      font-size: 16px;
    }
  }
</style>
