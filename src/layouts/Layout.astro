---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'We Comin\' For You Cast - Your favorite pro-wrestling podcast' } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title} | We Comin' For You Cast</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-red-700 text-white shadow-lg">
      <div class="container mx-auto px-4 py-4 md:py-6">
        <div class="flex flex-col sm:flex-row justify-between items-center">
          <div class="flex items-center space-x-3 mb-3 sm:mb-0">
            <h1 class="text-2xl sm:text-3xl font-bold font-serif text-center sm:text-left">We Comin' For You Cast</h1>
          </div>
          <nav class="w-full sm:w-auto">
            <ul class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-6 text-center sm:text-left">
              <li><a href="/" class="block py-2 px-4 sm:py-0 sm:px-0 hover:text-yellow-300 transition-colors rounded sm:rounded-none hover:bg-red-800 sm:hover:bg-transparent">Home</a></li>
              <li><a href="/episodes" class="block py-2 px-4 sm:py-0 sm:px-0 hover:text-yellow-300 transition-colors rounded sm:rounded-none hover:bg-red-800 sm:hover:bg-transparent">Episodes</a></li>
              <li><a href="/about" class="block py-2 px-4 sm:py-0 sm:px-0 hover:text-yellow-300 transition-colors rounded sm:rounded-none hover:bg-red-800 sm:hover:bg-transparent">About</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <h2 class="text-2xl font-bold font-serif">We Comin' For You Cast</h2>
            <p class="text-gray-300">Your favorite pro-wrestling podcast</p>
          </div>
          <div class="flex space-x-4">
            <a href="#" class="text-white hover:text-yellow-300 transition-colors">
              <span class="sr-only">YouTube</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="#" class="text-white hover:text-yellow-300 transition-colors">
              <span class="sr-only">Audiomack</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.6 0 12 0zm0 22.5c-5.8 0-10.5-4.7-10.5-10.5S6.2 1.5 12 1.5 22.5 6.2 22.5 12 17.8 22.5 12 22.5z" />
